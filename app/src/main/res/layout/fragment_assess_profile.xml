<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bottomnavfragments.AssessProfileFragment"
    android:id="@+id/assessLayout"
    android:clipToPadding="true"
    android:paddingTop="3dp"
    android:textSize="16sp"
    android:textStyle="bold|italic"
    app:fontFamily="sans-serif">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider_assess"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="0dp"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:delay="0"
        app:error_image="@drawable/bg_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:period="1000"
        app:placeholder="@drawable/bg_grey"
        tools:layout_editor_absoluteX="8dp" />


    <Button
        android:id="@+id/sendButton"
        style="@android:style/Widget.Button"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ic_send"
        android:hapticFeedbackEnabled="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#00897B"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="@+id/email" />

    <Button
        android:id="@+id/assessButton"
        style="@android:style/Widget.Button"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/roundedbuttongreen"
        android:hapticFeedbackEnabled="false"
        android:text="Assess"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:autofillHints=""
        android:drawableStart="@drawable/ic_email_green_24dp"
        android:drawableLeft="@drawable/ic_email_green_24dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FF008080"
        android:textColorHint="#FFABD5D5"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

</androidx.constraintlayout.widget.ConstraintLayout>